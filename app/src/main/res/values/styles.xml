    <style name="CVTextViewHome" parent="CVTextViewWhite">
        <item name="android:paddingStart">@dimen/spacing_10</item>
        <item name="android:layout_width">@dimen/spacing_190</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingEnd">@dimen/spacing_10</item>
        <item name="android:paddingTop">@dimen/spacing_8</item>
        <item name="android:paddingBottom">@dimen/spacing_8</item>
        <item name="android:layout_marginTop">@dimen/spacing_25</item>
        <item name="android:background">@drawable/bg_gold_solid_no_border_30_radius</item>
    </style>
    <style name="CVTextViewButtonUpload" parent="CVTextViewHome">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingEnd">@dimen/spacing_20</item>
        <item name="android:paddingStart">@dimen/spacing_20</item>
        <item name="android:layout_marginTop">@dimen/spacing_0</item>
    </style>
    <!--  custom Edittext  -->

    <style name="CVEditTextDefault" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/c_2d2d2d</item>
        <item name="android:textColorHint">@color/c_a6a8b0</item>
        <item name="android:textSize">@dimen/ts_13_5</item>
        <item name="android:textCursorDrawable">@drawable/cursor_edittex</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/spacing_8</item>
        <item name="android:inputType">text</item>
        <!--        <item name="android:fontFamily">@font/regular</item>-->
        <!--        <item name="fontFamily">@font/regular</item>-->
    </style>

    <style name="CVEditTextBack" parent="CVEditTextDefault">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="CVEditTextPrimary" parent="CVEditTextDefault">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="CVEditTextInputDefault" parent="CVEditTextDefault">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/c_D6D7DA</item>
        <item name="android:padding">@dimen/spacing_8</item>
    </style>
    <!--  custom Linnerlayout  -->
    <style name="LinearLayoutVerticalParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LinearLayoutDefault">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LinearLayoutVerticalFullWidth" parent="LinearLayoutDefault">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="LinearLayoutVerticalFullWidthHeight" parent="LinearLayoutVerticalFullWidth">
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="LinearLayoutHorizontalFullWidth" parent="LinearLayoutDefault">
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LinearLayoutHorizontalFullWidthHeight" parent="LinearLayoutHorizontalFullWidth">
        <item name="android:layout_height">match_parent</item>
    </style>
</resources>
